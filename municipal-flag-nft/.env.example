# =============================================================================
# MUNICIPAL FLAG NFT GAME - CENTRALIZED CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# All settings for backend, frontend, contracts, and AI are configured here
# =============================================================================

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
PROJECT_NAME=Municipal Flag NFT Game
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# BACKEND SETTINGS (FastAPI)
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Database (SQLite for demo, can change to PostgreSQL)
DATABASE_URL=sqlite:///./nft_game.db

# Admin API Key (for admin panel authentication)
ADMIN_API_KEY=your-secure-admin-key-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND SETTINGS (React)
# =============================================================================
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_CONTRACT_ADDRESS=
REACT_APP_CHAIN_ID=80002
REACT_APP_CHAIN_NAME=Polygon Amoy Testnet
REACT_APP_RPC_URL=https://rpc-amoy.polygon.technology
REACT_APP_BLOCK_EXPLORER=https://amoy.polygonscan.com
REACT_APP_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# =============================================================================
# BLOCKCHAIN SETTINGS (Hardhat / Smart Contracts)
# =============================================================================
# Deployer wallet private key (WITHOUT 0x prefix)
DEPLOYER_PRIVATE_KEY=your-private-key-here

# Polygon Amoy Testnet
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_AMOY_CHAIN_ID=80002

# For contract verification
POLYGONSCAN_API_KEY=your-polygonscan-api-key

# Deployed contract address (fill after deployment)
CONTRACT_ADDRESS=

# NFT Base URI (IPFS gateway + folder)
NFT_BASE_URI=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# IPFS SETTINGS (Pinata)
# =============================================================================
PINATA_API_KEY=your-pinata-api-key
PINATA_API_SECRET=your-pinata-api-secret
PINATA_JWT=your-pinata-jwt-token

# =============================================================================
# AI IMAGE GENERATION SETTINGS (Stable Diffusion)
# =============================================================================
# Option 1: Local Stable Diffusion
SD_LOCAL_ENABLED=false
SD_MODEL_PATH=stabilityai/stable-diffusion-2-1

# Option 2: Cloud API (Replicate)
SD_USE_CLOUD_API=true
REPLICATE_API_TOKEN=your-replicate-api-token

# Option 3: Stability AI API
STABILITY_API_KEY=your-stability-api-key

# Image generation settings
SD_IMAGE_WIDTH=512
SD_IMAGE_HEIGHT=512
SD_NUM_INFERENCE_STEPS=50
SD_GUIDANCE_SCALE=7.5

# =============================================================================
# GAME CONFIGURATION
# =============================================================================
# Number of flags per municipality
FLAGS_PER_MUNICIPALITY=8

# Default prices (in MATIC)
DEFAULT_STANDARD_PRICE=0.01
DEFAULT_PLUS_PRICE=0.02
DEFAULT_PREMIUM_PRICE=0.05

# Discount percentages
PLUS_DISCOUNT_PERCENT=50
PREMIUM_DISCOUNT_PERCENT=75

# =============================================================================
# DEMO SETTINGS
# =============================================================================
# Pre-funded demo wallet address
DEMO_WALLET_ADDRESS=

# Number of countries for demo
DEMO_COUNTRIES_COUNT=4

# Number of regions per country
DEMO_REGIONS_PER_COUNTRY=1

# Number of municipalities per region
DEMO_MUNICIPALITIES_PER_REGION=2
